{
  "name": "redux-rails",
  "version": "0.0.1",
  "description": "Redux and your server talking without fuss.",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/instacart/redux-rails"
  },
  "scripts": {
    "start": "webpack --progress --watch --config webpack.config.js src/index.js dist/redux-rails.js",
    "build": "npm test && webpack --progress --config webpack.config.js src/index.js dist/redux-rails.js",
    "test": "jest --coverage --silent",
    "test:watch": "npm test -- --watch --bail"
  },
  "author": "Dominic Cocchiarella (http://github.com/dcocchia)",
  "license": "MIT",
  "peerDependencies": {
    "redux": ">=3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "es6-promise": "^4.0.5",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^22.4.2",
    "nock": "^9.0.2",
    "redux": ">=3.6.0",
    "webpack": "^2.2.0"
  },
  "jest": {
    "testRegex": "(/test/.*\\.spec.js)$",
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
